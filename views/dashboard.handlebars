<div class="row px-2 px-sm-5 justify-content-center">
    <div class="col-12 col-md-5">
        <h3>Your Posts</h3>
    </div>
    {{!-- Search Bar --}}
    <div class="col-12 col-md-5 w-50">
        {{#if posts}}
            <div class="float-left float-md-right mt-2 mt-md-0" id="search">
                <label for="search-bar" class="d-block text-md-right">Search Your Posts</label>
                <input id="search-bar" class="rounded text-left text-md-right pl-2 pl-md-0 pr-1" />
                <i class="fas fa-search float-left float-md-right"></i>
            </div>
        {{/if}}
    </div>
</div>

{{#each posts as |post|}}
{{> edit-summaries}}
{{/each}}

<div class="row px-2 px-sm-5 justify-content-center">
    <div class="col-12 col-md-10">
        <a href="/dashboard/new-post" title="Draft new blog post"><button class="btn btn-dark w-75 mt-3"><h5>+ New Post</h5></button></a>
    </div>
</div>

{{!-- If there are no posts to search, then the script file is not needed --}}
{{#if posts}}
    <script src="./js/dist/search.min.js"></script>
{{/if}}