<div class="row px-2 px-sm-5 justify-content-center">
    <div class="col-12 col-md-10 search-container">
        <a href="/post/{{id}}" class="post-link">
            <div class="my-3 card shadow-sm rounded" data-post_id="{{id}}">
                <div class="card-header text-white d-flex justify-content-between dark-green">
                    <h2 class="card-title search-content">{{title}}</h2> 
                    <h4 class="search-content">{{user.name}}</h4>
                </div>
                <div class="card-body bg-light p-3">
                    <p class="search-content"><strong>{{{formatDate post_date}}}</strong></p>
                    <p class="search-content">{{text}}</p>
                </div>
            </div>
        </a>
    </div>
</div>